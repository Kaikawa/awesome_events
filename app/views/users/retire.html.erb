<div>
<h1>退会の確認</h1>
</div>
<% if current_user.errors.any? %>
	<div class = 'alert alert-danger'>
		<ul>
			<% current_user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= link_to '退会する', user_path, method: :delete, class: 'btn btn-danger' %>